{
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2015",
        "module": "es2020",
        "moduleResolution": "node",
        "moduleDetection": "force",
        "outDir": "build",
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true
    }
}